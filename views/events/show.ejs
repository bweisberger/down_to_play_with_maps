<!DOCTYPE html>
<html>
    <%-include ../../partials/_head.ejs%>
    <body>
        <%-include ../../partials/_navbar.ejs%> 
        <main>
        <%-include ../../partials/_alert.ejs%>
        <h1><%=event.name%></h1>
        <section> Currently Playing:
        <%if(user && user._id == event.host._id.toString()){%>
            <%players.forEach(function(player){%>
                <p class="player-name"><%=player.name%></p>
            <%})%>
        <%} else {%>
            <p><%=players.length%> Players</p>
            <%}%>
        </section>
            <section class="player-list"></section>
            <section class="card show-event-card">
                Name: <%=event.name%><br/>
                Date: <%=event.date%><br/>
                Time: <%=event.time%><br/>
                Location: <%=event.location%><br/>
                Host:   <%=event.host.name%><br/> 
                Contact Info: <%=event.host.contactInfo%><br/>
                Game: <%=event.gameToBePlayed%><br/>
                Description: <%=event.description%><br/>
                Maximum Players: <%=event.maxNumberOfPlayers%><br/>
                Minimum Players: <%=event.minNumberOfPlayers%><br/>
                Available Spots: <%=event.availableSpots%><br/>
                Event Type: <%=event.type%><br/>
                <img class="event-image" src='<%=event.image%>'><br/>
            </section>
            <section>
                <a href="/events/<%=event._id%>/edit">Edit Event</a>
            </section>
            <section>
                <form action='/events/<%=event._id%>' method="POST">
                    <input type="submit" name="" value="Join">
                </form>
            </section>
            <section>
                <form action="/events/<%=event._id%>?_method=DELETE" method="POST">
                    <input type="submit" name="" value="Delete Event">
                </form>
            </section>
        </main>
        <%-include ../../partials/_footer.ejs%>
    </body>
</html>